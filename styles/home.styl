$duration = 450ms
$tileWidth = 250px
$tileHeight = ($tileWidth / (16/9))
$iconSize = 50px
$growFactor = 1.5 // 1.5 times the original size

$moveLeft = -($tileWidth * ($growFactor - 1) / 2)
$moveRight = $tileWidth * ($growFactor - 1)


body{
    margin: 0;
    padding: 0;
    background: #0D0D0D;
    overflow-wrap: break-word;
    position: relative;
}

.header-title-logo img{
    max-height: 9.375rem;
    width: auto;
    max-width: 100%;
}

.header{
    background: #0D0D0D;
    width: 100%;
    display: flex;
    justify-content: center;
    columns: flex;
}

.header-title {
    width:100%;
    display: flex;
    justify-content: center;
    columns: flex;
    margin: 2rem 3rem;
    background: #0D0D0D;
}

.container{
    margin: 0;
    padding: 0;
    justify-content: center;
    width: auto;
}

h3{
  width: 100%;
  margin: 2rem 2rem;
  color: #fff;
}


@media screen and (max-width: 767px){
    .header-title-logo img {
        max-height: 65px;
    }
}

.row{
    width: 100%;
    overflow: hidden
}
  

.row__inner{
  transition: $duration transform;
  font-size: 0;
  white-space: nowrap;
  margin: 2rem 2rem;
  padding-bottom: 10px // Account for OS X scroll bar;
}

.tile{
  position: relative;
  display: inline-block;
  width: $tileWidth;
  height: $tileHeight;
  margin-right: 10px;
  font-size: 20px;
  cursor: pointer;
  transition: $duration all;
  transform-origin: center left;
}

.tile__img
  width: $tileWidth
  height: $tileHeight
  object-fit: cover 
  object-position: 5px 10% 

@media screen and (max-width: 767px)
  .row
    justify-content: center
    max-width 100%
    overflow: scroll

  .tile__img
    max-width: 10.313wrem
    max-height: 8.789rem

  .row__inner
    margin: 2rem 2rem;

.tile__details
  position: absolute
  bottom: 0
  left: 0
  right: 0
  top: 0
  font-size: 10px
  opacity: 0
  background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0) 100%)
  transition: $duration opacity

  &:after
  &:before
    position absolute
    top: 50%
    left: 50%
    display: black

  &:after
    margin-top: (-($iconSize / 2))
    margin-left: (-($iconSize / 2))
    width: $iconSize
    height: $iconSize
    border: 3px solid #ecf0f1
    line-height: $iconSize
    text-align: center
    border-radius: 100%
    background: rgba(0,0,0,0.5)
    z-index: 1

  &:before
    left: 0
    width: 100%
    font-size: 30px
    margin-left: 7px
    margin-top: -18px
    text-align: center
    z-index: 2

  .tile:hover &
    opacity: 1

.tile__title
  position absolute
  bottom: 0
  padding: 10px



.row__inner:hover
  transform: translate3d($moveLeft, 0, 0)

.row__inner:hover .tile

  
  opacity: .3

  
  &:hover
    transform: scale($growFactor)
    opacity: 1


.tile:hover ~ .tile
  transform: translate3d($moveRight, 0, 0)
